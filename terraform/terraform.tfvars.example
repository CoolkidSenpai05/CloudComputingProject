# Copy this file to terraform.tfvars and update with your values

aws_region = "us-east-1"

# VPC CIDR blocks
public_vpc_cidr  = "10.0.0.0/16"
private_vpc_cidr = "10.1.0.0/16"

# Subnet CIDR blocks
public_subnet_cidr     = "10.0.1.0/24"
private_subnet_cidr    = "10.1.1.0/24"
private_nat_subnet_cidr = "10.1.2.0/24"

# Instance types
frontend_instance_type = "t2.micro"
backend_instance_type  = "t2.micro"

# Security: Restrict SSH access to your IP
# allowed_ssh_cidr = "YOUR_IP/32"

